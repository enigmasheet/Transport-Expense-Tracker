<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ABCarriers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/lib/nepali.datepicker.v4.0.8/nepali.datepicker.v4.0.8.min.css" rel="stylesheet" type="text/css"/>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">ABCarriers</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Category Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="categoryDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Index">View Categories</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Categories" asp-action="Create">Create Category</a></li>
                                
                            </ul>
                        </li>

                        <!-- Invoice Dropdown -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="invoiceDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">Invoices
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="invoiceDropdown">
                                <li><a class="dropdown-item" asp-area="" asp-controller="Invoices" asp-action="Index">View Invoices</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Invoices" asp-action="Create">Create Invoice</a></li>
                               
                            </ul>
                        </li>

                        <!-- Invoice Item Dropdown --> 
                         <li class="nav-item dropdown"> 
                             <a class="nav-link dropdown-toggle" href="#" id="invoiceItemDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"> 
                                 Units 
                             </a>
                             <ul class="dropdown-menu" aria-labelledby="invoiceItemDropdown"> 
                                 <li><a class="dropdown-item" asp-area="" asp-controller="Units" asp-action="Index">View Units</a></li>
                                <li><a class="dropdown-item" asp-area="" asp-controller="Units" asp-action="Create">Create Unit</a></li>
                                
                            </ul> 
                         </li> 

                         <!-- Location Dropdown --> 
                         <li class="nav-item dropdown"> 
                             <a class="nav-link dropdown-toggle" href="#" id="locationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"> 
                                 Locations 
                             </a> 
                             <ul class="dropdown-menu" aria-labelledby="locationDropdown"> 
                                 <li><a class="dropdown-item" asp-area="" asp-controller="Locations" asp-action="Index">View Locations</a></li> 
                                 <li><a class="dropdown-item" asp-area="" asp-controller="Locations" asp-action="Create">Create Location</a></li> 
                                 
                             </ul> 
                         </li> 

                         <!-- Vendor Dropdown --> 
                         <li class="nav-item dropdown"> 
                             <a class="nav-link dropdown-toggle" href="#" id="vendorDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false"> 
                                 Vendors 
                             </a> 
                             <ul class="dropdown-menu" aria-labelledby="vendorDropdown"> 
                                 <li><a class="dropdown-item" asp-area="" asp-controller="Vendors" asp-action="Index">View Vendors</a></li> 
                                 <li><a class="dropdown-item" asp-area="" asp-controller="Vendors" asp-action="Create">Create Vendor</a></li> 
                                 
                             </ul> 
                         </li> 

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - ABCarriers - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/datePicker.js" type="text/javascript"></script>
<script src="~/lib/nepali.datepicker.v4.0.8/nepali.datepicker.v4.0.8.min.js" type="text/javascript"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
